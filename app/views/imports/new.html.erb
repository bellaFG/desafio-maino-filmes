<div class="form-container">
  <h2 class="form-title"><%= t('imports.new.title') %></h2>

  <%= form_with model: @import, local: true, html: { multipart: true, class: "import-form" }, data: { turbo: false } do |f| %>
    <% if @import.errors.any? %>
      <div class="alert alert-error">
        <ul>
          <% @import.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :file, t('imports.new.select_file'), class: "form-label" %>
      <%= f.file_field :file, accept: ".csv", class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= f.submit t('imports.new.start_import'), class: "btn btn-primary" %>
      <%= link_to t('imports.new.import_history'), imports_path, class: "btn btn-secondary" %>
    </div>
  <% end %>

  <p class="form-hint">
    <%= t('imports.new.file_format_hint') %>
  </p>
</div>
