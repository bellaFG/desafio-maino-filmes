<div class="form-container">
  <h2 class="form-title"><%= t('devise.registrations.edit.title') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
               html: { method: :put, multipart: true }, class: "edit-profile-form") do |f| %>
    <%= devise_error_messages! %>

    <!-- Nome -->
    <div class="form-group">
      <%= f.label :name, t('devise.registrations.edit.name'), class: "form-label" %>
      <%= f.text_field :name, autofocus: true, class: "form-control input-name" %>
    </div>

    <!-- Email -->
    <div class="form-group">
      <%= f.label :email, t('devise.registrations.edit.email'), class: "form-label" %>
      <%= f.email_field :email, class: "form-control input-email" %>
    </div>

    <!-- Avatar / Foto de Perfil -->
    <div class="form-group avatar-group">
      <%= f.label :avatar, t('devise.registrations.edit.avatar'), class: "form-label" %>

      <div class="avatar-preview">
        <% if resource.avatar.attached? && resource.persisted? && !resource.avatar.blob&.new_record? %>
          <%= image_tag url_for(resource.avatar), class: "avatar-thumb", alt: t('devise.registrations.edit.current_avatar') %>

          <!-- Botão de remover avatar -->
          <div class="remove-avatar">
            <%= f.hidden_field :remove_avatar, value: "false", id: "remove_avatar_field" %>
            <button
              type="button"
              class="button btn-remove-avatar"
              onclick="document.getElementById('remove_avatar_field').value='true'; this.form.submit();"
            >
              <%= t('devise.registrations.edit.remove_avatar') %>
            </button>
          </div>
        <% else %>
          <%= image_tag "default-user.png", class: "avatar-thumb", alt: t('devise.registrations.edit.default_avatar') %>
        <% end %>
      </div>

      <%= f.file_field :avatar, accept: "image/png,image/jpeg", class: "form-control-file input-avatar" %>
    </div>

    <!-- Senha -->
    <div class="form-group">
      <%= f.label :password, t('devise.registrations.edit.new_password'), class: "form-label" %>
      <i class="hint">(<%= t('devise.registrations.edit.password_hint') %>)</i>
      <%= f.password_field :password, autocomplete: "off", class: "form-control input-password" %>
    </div>

    <!-- Confirmação de senha -->
    <div class="form-group">
      <%= f.label :password_confirmation, t('devise.registrations.edit.password_confirmation'), class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-password-confirmation" %>
    </div>

    <!-- Senha atual -->
    <div class="form-group">
      <%= f.label :current_password, t('devise.registrations.edit.current_password'), class: "form-label" %>
      <i class="hint">(<%= t('devise.registrations.edit.current_password_hint') %>)</i>
      <%= f.password_field :current_password, autocomplete: "off", class: "form-control input-current-password" %>
    </div>

    <!-- Ações -->
    <div class="form-actions">
      <%= f.submit t('devise.registrations.edit.update'), class: "button btn-submit" %>
      <%= link_to t('devise.registrations.edit.cancel'), root_path, class: "button btn-cancel" %>
    </div>
  <% end %>
</div>
